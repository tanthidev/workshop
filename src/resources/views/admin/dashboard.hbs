<script>
    var chart = document.querySelector('#chartline');
    var options = {
        series: [{
            name: 'Workshop Attendance', // Tên dữ liệu cho TEAM A
            type: 'area', // Loại biểu đồ là diện tích
            data: [253, 356, 235, 215, 212, 356 , 400, 395, 325, 215, 326] // Dữ liệu thể hiện sự tham gia của workshop theo ngày
        }],
        chart: {
            height: 350,
            type: 'line', // Loại biểu đồ là dạng đường
            zoom: {
                enabled: false
            }
        },
        stroke: {
            curve: 'smooth' // Đường cong mượt mà
        },
        fill: {
            type: 'solid',
            opacity: [0.35, 1],
        },
        labels: ['Jan 01', 'Jan 02', 'Jan 03', 'Jan 04', 'Jan 05', 'Jan 06', 'Jan 07', 'Jan 08', 'Jan 09', 'Jan 10', 'Jan 11'], // Nhãn cho trục x thể hiện ngày
        markers: {
            size: 0
        },
        yaxis: [{
            title: {
                text: 'Attendance', // Tiêu đề của trục y
            },
        }],
        tooltip: {
            shared: true,
            intersect: false,
            y: {
                formatter: function(y) {
                    if (typeof y !== "undefined") {
                        return y.toFixed(0) + " attendees"; // Định dạng thông tin hiển thị khi di chuột qua biểu đồ
                    }
                    return y;
                }
            }
        }
    };
    var chart = new ApexCharts(chart, options);
    chart.render();
</script>
 
